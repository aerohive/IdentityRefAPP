doctype html5
html
    head
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1")

        script(src="/i18n/web-app/en.js")
        script(src="/i18n/web-app/fr.js")

        link(rel="stylesheet" href="/bower_components/intl-tel-input/build/css/intlTelInput.css")
        link(rel="stylesheet" href="/bower_components/angular-material-data-table/dist/md-data-table.min.css")
        link(rel="stylesheet" href="/bower_components/angular-material/angular-material.min.css")
        link(rel='stylesheet' href='/css/ah-tm.dashboard.css')
        link(rel='stylesheet' href='/css/ah-tm.tags.css')
        link(rel='stylesheet' href='/css/ah-tm.cards.css')
        link(rel='stylesheet' href='/css/ah-tm.md-table.css')
        link(rel='stylesheet' href='/css/ah-tm.md-list.css')

        script(src="/bower_components/jquery/dist/jquery.min.js")

        script(src="/bower_components/angular/angular.min.js")
        script(src="/bower_components/angular-aria/angular-aria.js")
        script(src="/bower_components/angular-animate/angular-animate.min.js")
        script(src="/bower_components/angular-material/angular-material.js")
        script(src="/bower_components/angular-messages/angular-messages.js")
        script(src="/bower_components/angular-material-data-table/dist/md-data-table.min.js")
        script(src="/bower_components/angular-route/angular-route.min.js")
        script(src="/bower_components/angular-bootstrap/ui-bootstrap.js")
        script(src="/bower_components/angular-translate/angular-translate.min.js")
        script(src="/bower_components/angular-qrcode/angular-qrcode.js")
        script(src="/bower_components/qrcode-generator/js/qrcode.js")
        script(src="/bower_components/intl-tel-input/build/js/intlTelInput.min.js")
        script(src="/bower_components/intl-tel-input/lib/libphonenumber/build/utils.js")
        script(src="/bower_components/ng-intl-tel-input/dist/ng-intl-tel-input.min.js")

        script(src="/web-app/app.js")
        script(src="/web-app/routes.js")
        script(src="/web-app/filters/filters.js")
        script(src="/web-app/create/controller.js")
        script(src="/web-app/create/service.js")
        script(src="/web-app/credentials/controller.js")
        script(src="/web-app/credentials/service.js")
        script(src="/web-app/import/controller.js")
        script(src="/web-app/import/service.js")
        script(src="/web-app/monitor/controller.js")
        script(src="/web-app/monitor/service.js")
        script(src="/web-app/modals/controller.js")
        script(src="/web-app/modals/service.js")
        script(src="/web-app/ng-sanitize.js")
        script(src="/bower_components/ng-csv/build/ng-csv.min.js")

    body(ng-app="identity").icons-docs(ng-controller="UserCtrl as UserCtrl")
        input(type='hidden' id='hmngType' value=hmngType ng-model="hmngType")
        div.modal.fade.bs-example-modal-lg(ng-controller="ModalCtrl")
            script(type="text/ng-template" id="modalAboutContent.html")
                md-dialog(aria-label="List dialog")
                    md-toolbar
                        div.md-toolbar-tools
                            h2Account(translate="layout.details")
                    md-dialog-content
                        div.md-dialog-content
                            table
                                tbody
                                    tr
                                        th(style="padding: 5px 10px;" translate="layout.hmngServer")
                                        td(style="padding: 5px 10px;")= server
                                    tr
                                        th(style="padding: 5px 10px;" translate="layout.ownerId")
                                        td(style="padding: 5px 10px;")= ownerId
                                    tr
                                        th(style="padding: 5px 10px;" translate="layout.accessToken")
                                        td(style="padding: 5px 10px;")= accessToken
                    md-dialog-actions(layout="row")
                        md-button(ng-click="close()" translate="button.close" aria-label="close")


        header.md-page-header(ng-controller="HeaderCtrl")
            div.header
            md-toolbar.header.fixed(layout='row')

                h1.logo.md-toolbar-tools
                    img(src="/images/logo_nav.png" alt="Aerohive")
                span(flex)
                md-menu
                    md-button(aria-label="language" ng-click="UserCtrl.openMenu($mdMenu, $event)" style="min-width: 20px;")
                        md-tooltip(md-direction="bottom" md-visible="tooltipVisible") {{"button.language" | translate}}
                        md-icon(md-menu-align-target md-svg-src="/images/icons/ic_language_24px.svg")
                    md-menu-content
                        md-menu-item
                            md-button(ng-controller="ModalCtrl" ng-click="UserCtrl.translate('en')" aria-label="English")
                                span(style="display: inline-flex; margin-right: 5px;")
                                    div.iti-flag.gb
                                span English
                        md-menu-item
                            md-button(ng-controller="ModalCtrl" ng-click="UserCtrl.translate('fr')" aria-label="Francais")
                                span(style="display: inline-flex; margin-right: 5px;")
                                    div.iti-flag.fr
                                span Francais
                md-menu
                    md-button(ng-click="UserCtrl.openMenu($mdMenu, $event)" style="min-width: 20px;" aria-label="menu")
                        md-tooltip(md-direction="bottom" md-visible="tooltipVisible") {{"button.menu" | translate}}
                        md-icon(md-menu-align-target md-svg-src="/images/icons/ic_more_vert_24px.svg")
                    md-menu-content
                        md-menu-item
                            md-button(ng-controller="ModalCtrl" ng-click="open('about')" aria-label="about")
                                md-icon(md-menu-align-target md-svg-src="/images/icons/ic_info_24px.svg")
                                span(translate="layout.accountDetails")
                        md-menu-item
                            md-button(href="/logout/" aria-label="logout")
                                md-icon(md-menu-align-target md-svg-src="/images/icons/ic_exit_to_app_24px.svg")
                                span(translate="layout.logout")



            md-toolbar.md-menu-toolbar(layout="row" style="background-color: rgb(250, 250, 250)")

                md-toolbar-filler(layout layout-align="center center" style="width:250px; background-color: rgb(250, 250, 250)" hide-xs hide-sm hide-md)
                md-menu-bar.main-menu
                    md-button(href="#!/monitor/" ng-class="{cur: nav.isActive('monitor')}" aria-label="monitor")
                        md-icon(md-menu-align-target md-svg-src="/images/icons/ic_recent_actors_24px.svg")
                        div(translate="layout.monitor")

                    md-button(href="#!/credentials/" ng-class="{cur: nav.isActive('credentials')}" aria-label="credentials")
                        md-icon(md-menu-align-target md-svg-src="/images/icons/ic_contacts_24px.svg")
                        div(translate="layout.credentials")

                    md-button(href="#!/create/single" ng-class="{cur: nav.isActive('create')}" aria-label="create")
                        md-icon(md-menu-align-target md-svg-src="/images/icons/ic_person_add_24px.svg")
                        div(translate="layout.create")

                    md-button(href="#!/import/" ng-class="{cur: nav.isActive('import')}" aria-label="import")
                        md-icon(md-menu-align-target md-svg-src="/images/icons/ic_file_download_24px.svg")
                        div(translate="layout.import")



        div(id="main")
            md-button.md-fab.md-warn.md-mini(aria-label="menu" style="position: fixed; bottom: 20px; left: 20px" ng-show="UserCtrl.showFab()" hide-gt-md ng-click='UserCtrl.sideNav("left")')
                md-icon(md-menu-align-target md-svg-src="/images/icons/ic_menu_24px.svg")
            ng-view



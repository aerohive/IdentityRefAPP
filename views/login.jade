doctype html
html
    head
        title= title
        script(language="JavaScript" type="text/javascript" src='/bower_components/jquery/dist/jquery.min.js')
        script(language="JavaScript" type="text/javascript" src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
        link(rel='stylesheet' href='/css/ah-styles.min.css')
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/ah-tm.init.css')
    body
        div(style="border-top: 2px solid rgb(255, 195, 15);" class="user-home-wrap")
        div.clearfix(id='main')
            div.pt-r
                div(id="container")
                    div.grid_20.LoginPage
                        img(src="/images/login_page_logo.png" alt="Aerohive" class="ah-logo")
                        div.ah-growing-hives
                        div.page-footer
                            span(style="border: none;") Â© 2016 Aerohive Networks. All Rights Reserved.



                        div.login-box.grid_15
                            div.login-box-login
                                div.leftColumn.grid_7_2.box-flip
                                    div.front.flip-position
                                        div
                                            h1.font-aaux-thin Already have your<br> API Access Token?

                                            if errorcode
                                                div.wrong-password.font-aaux
                                                    case errorcode
                                                        when "1"
                                                            div Please select a server.
                                                        when "2"
                                                            div Owner ID is invalid.
                                                        when "3"
                                                            div Access Token is invalid.
                                            div.login-form
                                                form(id="AT" action="/" method="post")
                                                    div.dropdown
                                                        button(id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                                                            span.init-text(id="server") Select Server
                                                            span.caret
                                                        ul.dropdown-menu(aria-labelledby="dLabel")
                                                            li(onclick="selectServer('cloud-va.aerohive.com')") cloud-va.aerohive.com
                                                            li(onclick="selectServer('cloud-ie.aerohive.com')") cloud-ie.aerohive.com
                                                    input(id="vpcUrl" name="vpcUrl" required="required" type="hidden")
                                                    input(placeholder="Owner ID" required="required" autocorrect="off" autocapitalize="none" name="ownerID" type="text")
                                                    input(placeholder="Access Token" required="required" name="accessToken" type="text")
                                                    input.blue-button(value="See Data" type="submit")
                                                span='For more information, a Quick Start Guide is available '
                                                a(href="/howto/" target='_blank') here

                                div.rightColumn.grid_7_2.leftColumn
                                    div.front
                                        h1.font-aaux-thin Access with your <br>HMNG Account?
                                        div.login-form(style="text-align: center;")
                                            form(id="OAuth" action="https://cloud.aerohive.com/thirdpartylogin" method="get")
                                                input(type="hidden" name="client_id" value= client_id)
                                                input(type="hidden" name="redirect_uri" value= redirect_uri)
                                                div(style="margin: 30px;text-align: left;")
                                                    span You can use the OAuth authentication system to use this application with your HiveMnager NG account.
                                                div(style="margin: 30px;text-align: left;")
                                                    span="You can find some information about OAuth on the "
                                                        a(href="https://en.wikipedia.org/wiki/OAuth" target="_blank") OAuth Wiki page
                                                    span .
                                                input.blue-button(value="Go to HMNG Authentication page" type="submit" style="margin: auto;text-align: center;")



        script.
            function selectServer(server) {
                $("#server").html(server);
                $("#vpcUrl").val(server);
            }

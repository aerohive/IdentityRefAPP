    body(ng-app="identity").icons-docs(ng-controller="UserCtrl as UserCtrl")
        div.modal.fade.bs-example-modal-lg(ng-controller="ModalCtrl")
            script(type="text/ng-template" id="modalAboutContent.html")
                md-dialog(aria-label="List dialog")
                    md-toolbar
                        div.md-toolbar-tools
                            h2Account Details
                    md-dialog-content
                        div.md-dialog-content
                            table
                                tbody
                                    tr
                                        th(style="padding: 5px 10px;") HMNG Server:
                                        td(style="padding: 5px 10px;")= server
                                    tr
                                        th(style="padding: 5px 10px;") Owner ID:
                                        td(style="padding: 5px 10px;")= ownerId
                                    tr
                                        th(style="padding: 5px 10px;") Access Token:
                                        td(style="padding: 5px 10px;")= accessToken
                    md-dialog-actions(layout="row")
                        md-button(ng-click="close()") Close


        header.md-page-header(ng-controller="HeaderCtrl")
            div.header
            md-toolbar.header.fixed(layout='row')

                h1.logo.md-toolbar-tools
                    img(src="/images/logo_nav.png" alt="Aerohive")
                span(flex)
                md-menu
                    md-button(aria-label="menu" ng-click="UserCtrl.openMenu($mdOpenMenu, $event)")
                        md-tooltip(md-direction="bottom" md-visible="tooltipVisible") Menu
                        md-icon(class="material-icons" aria-label="menu") more_vert
                    md-menu-content
                        md-menu-item
                            md-button(ng-controller="ModalCtrl" ng-click="open('about')")
                                md-icon.material-icons(md-menu-align-target) info
                                span Account Details
                        md-menu-item
                            md-button(href="/logout/")
                                md-icon( md-menu-align-target) exit_to_app
                                span Logout



            md-toolbar.md-menu-toolbar(layout="row")
                md-toolbar-filler(layout layout-align="center center" style="width:250px; background-color: white" hide-xs hide-sm hide-md)
                md-menu-bar.main-menu

                    md-button(href="#/monitor/" ng-class="{cur: nav.isActive('monitor')}")
                        md-icon.material-icons.md-24 recent_actors
                        div Monitor

                    md-button(href="#/credentials/" ng-class="{cur: nav.isActive('credentials')}")
                        md-icon.material-icons.md-24 contacts
                        div Credentials

                    md-button(href="#/create/single" ng-class="{cur: nav.isActive('create')}")
                        md-icon.material-icons.md-24 person_add
                        div Create

                    md-button(href="#/import/" ng-class="{cur: nav.isActive('import')}")
                        md-icon.material-icons.md-24 file_download
                        div Import



        div(id="main")
            md-button.md-fab.md-warn.md-mini(aria-label="menu" style="position: fixed; bottom: 20px; left: 20px" ng-show="UserCtrl.showFab()" hide-gt-md ng-click='UserCtrl.sideNav("left")')
                md-icon.material-icons.md-12 menu
            ng-view



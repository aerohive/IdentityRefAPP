doctype html5
html
    head
        title= title
        link(rel='stylesheet' href='/css/font-awesome.min.css')
        link(rel='stylesheet' href='/css/ah-tm.table.css')
        link(rel='stylesheet' href='/css/ah-tm.dashboard.css')
        link(rel='stylesheet' href='/css/ah-tm.css')
        link(rel='stylesheet' href='/css/ah-tm.sizes.css')
        link(rel='stylesheet' href='/css/ah-tm.footer.css')
        link(rel='stylesheet' href='/css/ah-tm.input.css')
        link(rel='stylesheet' href='/css/ah-tm.header.css')
        link(rel='stylesheet' href='/css/ah-tm.dropdown.css')
        link(rel='stylesheet' href='/css/ah-tm.nav.css')
        link(rel='stylesheet' href='/css/ah-tm.top-button.css')
        link(rel='stylesheet' href='/js/bootstrap.min.js')
        script(src="/web-app/angular.js")
        script(src="/web-app/smart-table.js")
        script(src="/web-app/angular-route.js")
        script(src="/web-app/ui-bootstrap.js")
        script(src="/web-app/app.js")
        script(src="/web-app/ng-sanitize.js")
        script(src="/web-app/ng-csv.js")
        block include

    body(ng-app="identity")
        div.modal.fade.bs-example-modal-lg(ng-controller="ModalCtrl")
            script(type="text/ng-template" id="modalAboutContent.html")
                div.modal-header
                    h4.modal-title Account details
                div.modal-body
                    table(style="text-align: left;")
                        tbody
                            tr
                                th(style="padding: 5px 10px;") HMNG Server:
                                td(style="padding: 5px 10px;")= server
                            tr
                                th(style="padding: 5px 10px;") Owner ID:
                                td(style="padding: 5px 10px;")= ownerId
                            tr
                                th(style="padding: 5px 10px;") Access Token:
                                td(style="padding: 5px 10px;")= accessToken
                div.modal-footer
                    a(class="btn btn-primary" ng-click="close()") Close



        nav(ng-controller="NavCtrl")
            h1.logo
                img.app-logo(src="/images/logo_nav.png" alt="Aerohive")
            div
                ul
                    li(ng-class="{cur: nav.isActive('credentials')}")
                        a(href="#/credentials/")
                            div Credentials
                    li(ng-class="{cur: nav.isActive('create')}")
                        a(ng-click="changeDisplayCreate()")
                            div Create
                        div.sub-tabs
                            ul.sub-create(ng-show="displayCreate")
                                li(ng-class="{cur: subnav.isActive('single')}")
                                    a(href="#/create/single") Single Account
                                li(ng-class="{cur: subnav.isActive('bulk')}")
                                    a(href="#/create/bulk") Bulk Accounts
                    li(ng-class="{cur: nav.isActive('import')}")
                        a(href="#/import/")
                            div Import
                    li(ng-class="{cur: nav.isActive('logout')}")
                        a(href="/logout/")
                            div Logout



        section
            ng-view
